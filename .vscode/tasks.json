{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "type": "shell",
      "command": "powershell",
      "args": ["-Command", "Remove-Item -Recurse -Force dist,build -ErrorAction SilentlyContinue"]
    },
    {
      "label": "build",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": ["$tsc"],
      "dependsOn": ["clean"],
      "group": "build"
    },
    {
      "label": "dev",
      "type": "shell",
      "command": "npm run dev"
    },
    {
      "label": "typecheck",
      "type": "shell",
      "command": "npm run check",
      "problemMatcher": ["$tsc"]
    }
  ]
}
